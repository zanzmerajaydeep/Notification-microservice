package com.emailservice.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.emailservice.model.Email;
import com.emailservice.repo.AdminRepository;
import com.emailservice.repo.EmailRepository;
import com.emailservice.service.EmailService;

@RestController
@RequestMapping("/email")
@CrossOrigin("http://localhost:3000/")
public class EmailController {
	
	@Autowired
	EmailRepository emailrepo;
	
	
	@Autowired
	EmailService service;
	
	@GetMapping("/home")
	public String getHome() {
		return "Welcome to email service";
	}
	
	@GetMapping("/insert")
	public String insertEmail() {
		Email e = new Email("Welcome Email","Welcome to our service!","Thank you for joining our service....");
		emailrepo.save(e);
		return "inserted";
	}
	
	@PostMapping("sendmail")
	public String sendMail(@RequestBody Map<String, Object> student) {

		
		Email e = emailrepo.findByName("Student Marks");
		
		System.out.println(student);
		
		String subject = e.getSubject();
		String bd[] = e.getBody().split("\\$");
		System.out.println(bd);
		String body = bd[0]+student.get("name")+bd[1]+student.get("percentage")+"%"+bd[2]+student.get("adminname")+bd[3]+student.get("universityname")+bd[4];
		
		String email = (String) student.get("email");
		try {
			service.sendmail(email, subject, body);
			return "sent...";
		}
		catch(Exception exc)
		{
			exc.printStackTrace();
			return "error...";
		}
	}
}


